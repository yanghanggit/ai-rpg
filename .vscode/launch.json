    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "🚀 Debug MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_sample_mcp_server.py",
            "args": [
                "--config",
                "mcp_config.json",
                "--log-level",
                "DEBUG"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {},
            "python": "${command:python.interpreterPath}",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}